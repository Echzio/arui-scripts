{
    "testRegex": "src/.*(test|spec|/__test__/|/__tests__/).*\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
    "collectCoverageFrom": [
        "src/**/*.{js,jsx,ts,tsx}"
    ],
    "testURL": "http://localhost",
    "transform": {
        "^.+\\.jsx?$": "arui-scripts/configs/jest/babel-transform",
        "^.+\\.tsx?$": "ts-jest",
        "^(?!.*\\.(js|jsx|ts|tsx|css|json)$)": "arui-scripts/configs/jest/file-transform.js"
    },
    "moduleNameMapper": {
        "\\.css$": "arui-scripts/configs/jest/css-mock.js"
    },
    "setupFiles": [
        "arui-scripts/configs/jest/setup"
    ],
    "snapshotSerializers": [
        "jest-snapshot-serializer-class-name-to-string"
    ]
}
