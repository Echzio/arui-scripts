{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "conventional-changelog-cli": "1.3.16",
        "arui-presets-lint": "^2.0.0",
        "husky": "^3.1.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn workspace arui-scripts run test && yarn workspace arui-scripts-test run ci",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "./node_modules/arui-presets-lint/commitlint"
        ]
    },
    "scripts": {
        "test": "yarn workspace arui-scripts run test && yarn workspace arui-scripts-test run ci"
    }
}
